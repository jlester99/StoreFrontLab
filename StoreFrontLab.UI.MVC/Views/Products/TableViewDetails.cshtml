@model DATA.EF.Product

@{
    ViewBag.Title = $"{Model.ProductName}";
}

@*<h2>@ViewBag.Title</h2>*@

<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="~/Content/assets/img/@Model.ProductImage" alt="Product image" title="@Model.ProductName" />


                </div>

            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body" style="height: 700px;">
                        <h1 class="h2"> @Html.DisplayFor(model => Model.ProductName)</h1>
                        <p class="h3 py-2"> @Html.DisplayFor(model => Model.UnitPrice)</p>
                        <p class="py-2">
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-secondary"></i>
                            <span class="list-inline-item text-dark">Rating 4.8 | 36 Comments</span>
                        </p>

                        <h6>Description:</h6>
                        <p>@Html.DisplayFor(model => model.Description)</p>


                        <div class="row">
                            @*<div class="col-auto pt-3">
                                @Html.HiddenFor(x => x.ProductID)
                                <ul class="list-inline">
                                    <li class="list-inline-item text-right">
                                        Quantity
                                        <input type="hidden" name="product-quanity" id="product-quanity" value="1">
                                    </li>
                                    <li class="list-inline-item"><span class="btn btn-primary" id="btn-minus">-</span></li>
                                    <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                                    <li class="list-inline-item"><span class="btn btn-primary" id="btn-plus">+</span></li>
                                </ul>*@

                            @*</div>*@
                            <div class="col-auto pt-3 px-4">
                                <p>
                                    @using (Html.BeginForm("AddToCart", "Products", new { @productID = Model.ProductID }, FormMethod.Post, new { @class = "text-center" }))
                                    {
                                        @Html.HiddenFor(x => x.ProductID)
                                        <span class="label">Quantity: </span>
                                        @Html.TextBox("Qty", 1, new { @class = "form-control", style = "max-width: 50px;display: inline;" })
                                        <input type="submit" value="Add to Cart" class="btn btn-success" name="qty" />
                                    }
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 offset-md-9">

                        <p class="pt-5">
                                @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
                                @Html.ActionLink("Back to List", "TableViewProducts")
                            </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

